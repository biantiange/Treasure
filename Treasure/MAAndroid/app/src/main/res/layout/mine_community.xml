<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/community_Camera"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="@drawable/paizhao" />
        <TextView
            android:text="发帖"
            android:gravity="center"
            android:layout_weight="10"
            android:layout_width="0dp"
            android:textSize="18dp"
            android:textColor="#836FFF"
            android:layout_height="match_parent"/>
        <ImageView
            android:background="@drawable/add1"
            android:id="@+id/community_add_post"
            android:layout_width="28dp"
            android:layout_height="28dp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listView_community"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#F0FFFF"
        android:dividerHeight="15dp" />
</LinearLayout>