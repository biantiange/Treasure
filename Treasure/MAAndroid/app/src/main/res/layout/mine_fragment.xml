<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
<TextView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="#00bffe"
    android:textSize="20dp"
    android:textColor="#fcfcfc"
    android:gravity="center"
    android:text="个人中心"
    android:padding="5dp"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_img"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="4"
            android:scaleType="fitCenter"
            android:src="@drawable/aaa"

            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="18dp"
            android:layout_weight="14"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="user_name"
                android:textColor="#101010"
                android:textSize="19dp"

                />

            <TextView
                android:id="@+id/user_id"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="乖号：15233319950"
                android:textColor="#101010"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <ImageButton
                android:layout_marginTop="22dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit_m"
                android:background="@drawable/xiugaiziliao32"
                android:scaleType="center"

                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#b9b9b9"
        android:layout_margin="15dp"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
<LinearLayout
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="17dp"
    android:id="@+id/message_t"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"

    >
    <ImageButton
        android:layout_marginRight="15dp"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:background="@drawable/xiaoxitongzhi4"
        />

    <TextView android:layout_width="0dp"
        android:layout_weight="5"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:textColor="#101010"
        android:layout_height="match_parent"
        android:text="消息通知"/>
    <ImageButton

        android:layout_height="30dp"
        android:layout_width="40dp"
        android:background="@drawable/xiangxi"
        />

</LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b9b9b9"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="15dp"
            />
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="17dp"
            android:id="@+id/my_tiezi"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"

            >
            <ImageButton
                android:layout_marginRight="15dp"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:background="@drawable/tieziguanli3"
                />

            <TextView android:layout_width="0dp"
                android:layout_weight="5"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="#101010"
                android:layout_height="match_parent"
                android:text="帖子管理"/>
            <ImageButton

                android:layout_height="30dp"
                android:layout_width="40dp"
                android:background="@drawable/xiangxi"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b9b9b9"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="15dp"
            />

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="17dp"
            android:id="@+id/add_child1"

            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"

            >
            <ImageButton
                android:layout_marginRight="15dp"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:background="@drawable/tianjiahaizi32"
                />
            <TextView android:layout_width="0dp"
                android:layout_weight="5"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="#101010"
                android:layout_height="match_parent"
                android:text="孩子管理"/>
            <ImageButton

                android:layout_height="30dp"
                android:layout_width="40dp"
                android:background="@drawable/xiangxi"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b9b9b9"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="15dp"
            />

    </LinearLayout>






</LinearLayout>