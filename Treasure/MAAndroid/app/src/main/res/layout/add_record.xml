<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="#7adfb8"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_return"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:onClick="onClick"
                android:src="@drawable/fanhui32" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="添加记录"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/add_upload"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2.5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2.5dp"
                android:background="@drawable/button_radius"
                android:text="上传"
                android:textColor="@color/white"
                android:textSize="17dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:background="@android:drawable/edit_text"
                android:gravity="top"
                android:hint="请输入您想留住的瞬间"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:minLines="3"
                android:scrollbars="vertical"
                android:textColorHint="@color/LightGrey" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <com.example.lenovo.maandroid.Utils.MyGridView
                        android:id="@+id/add_grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:numColumns="3" />

                    <ImageView
                        android:id="@+id/add_picture"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:onClick="onClick"
                        android:src="@mipmap/upload" />
                    <!--<GridView
                        android:id="@+id/add_grid"
                        android:horizontalSpacing="30dp"
                        android:verticalSpacing="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:numColumns="3"></GridView>-->
                </LinearLayout>
                <!--<ImageView
                    android:onClick="onClick"
                    android:id="@+id/add_picture"
                    android:src="@drawable/picture"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>-->
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/tixing" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="可以为你心动的瞬间添加标签哦~"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.example.library.AutoFlowLayout
                android:id="@+id/afl_cotent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <indi.liyi.viewer.ImageViewer
        android:id="@+id/iver_add_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>